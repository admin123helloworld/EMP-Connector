<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>First_name_should_be_in_alphabets_only</fullName>
    <active>false</active>
    <errorConditionFormula>NOT(REGEX(  First_Name__c  , &quot;^[a-zA-Z0_]*$&quot;))</errorConditionFormula>
    <errorDisplayField>First_Name__c</errorDisplayField>
    <errorMessage>First name should contain alphabets only</errorMessage>
</ValidationRule>
